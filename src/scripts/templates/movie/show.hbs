<div class="">
	<div class="page-header">
		<h1 class="text-primary">{{title}} <small>- {{category.name}}</small></h1>
	</div>
	<div class="text-center">

		<div class="row">
			<div class="col-md-4 col-sm-12">
				<img src="{{image}}" class="img-rounded">
				<br><br>
				<div>
					{{#if isliked }}
						<button role="dislike" class="btn btn-danger">
							<span class="glyphicon glyphicon-thumbs-down"></span> Dislike
						</button>
					{{else}}
						<button role="like" class="btn btn-success">
							<span class="glyphicon glyphicon-thumbs-up"></span> Like
						</button>
					{{/if}}
				</div>
			</div>
			<div class="col-md-8 col-sm-12">
				
				<div>
					<h3 class="text-left text-primary">description / synopsis</h3>
					<p class="justify">{{description}}</p>
				</div>
				
				<div>
					<h3 class="text-left text-primary">Trailer</h3>
					<iframe src="{{trailerUrl}}" class="pull-left" style="width:480px; height:270px" frameborder="0"></iframe>
					<div class="clearfix"></div>
				</div>

				<div class="comment-area"></div>
			</div>
		</div>
	</div>
</div>